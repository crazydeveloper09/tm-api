<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    <script src="https://kit.fontawesome.com/b2ec1cb26d.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;700&family=Montserrat:wght@100;300;400;700&family=Poppins:wght@100;300;400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
        }
        thead,
        .ministryGroup__title {
            background: #9999CC;
            color: #fff;
            border-color: #fff;
            padding: 5px;
            text-align: center;
            border-left: 1px solid white;
            margin-bottom: 0;
            font-family: 'Poppins', sans-serif;
        }

        .ministryGroups {
            display: flex;
            margin-top: 20px;
        }
        .ministryGroup {
            
        }

        .ministryGroup__item {
            text-align: center;
            border-bottom: 1px solid grey;
            border-left: 1px solid grey;
            padding: 8px;
            margin-bottom: 0;
        }

        .ministryGroup:last-child {
            border-right: 1px solid grey;
        }

        .ministryGroup__item:nth-of-type(2n) {
            background: #eaeaea;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="row" style="margin-top: 5%;">
            <div class="col-lg-12">
                <h1 class="text-center" style="font-weight: 700;">Grupy służby zboru <%= currentUser.username %></h1>
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <% ministryGroups.forEach((group) => { %>
                                    <th><%= group.name %></th>
                                <% }) %>
                            </tr>
                            
                        </thead>
                        <tbody>
                            <% const maxItems = Math.max(...ministryGroups.map(group => group.preachers.length)); %> 
                            <% for(let i=0; i< maxItems; i++) { %>
                                <tr class="text-center">
                                   <% ministryGroups.forEach((group, j) => { %>
                                        <% if(ministryGroups[j]?.preachers[i]?.name === group.overseer.name){ %>
                                            <td><strong><%= ministryGroups[j]?.preachers[i]?.name %></strong></td>
                                        <% } else { %>
                                            <td><%= ministryGroups[j]?.preachers[i]?.name %></td>
                                        <% } %>
                                      
                                   <% }) %>
                                </tr>
                             <% } %>
                        </tbody>
            
                    </table>
                </div>
            </div>
        </div>
    </div>
    
</body>