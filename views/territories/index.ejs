<%- include("../partials/header") %>

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="text-center">Wszystkie tereny zboru <%= currentUser.username %>: <%= territories.length %></h1>
            </div>
        </div>
        <%- include("../partials/territorySearch") %>
        <% if(territories.length===0){ %>
            <div class="row justify-content-center">
                <div class="col-lg-8 col-md-12">
                    <div class="alert alert-info text-center" role="alert">
                        Nie ma na razie dodanych teren√≥w
                    </div>
                </div>
            </div>
        <% } else { %>
            <div class="row">
                <% territories.forEach((territory) => { %>
                    <%- include("../partials/territory", {territory: territory}) %>
                <% }) %>
            </div>
        <% } %>
    </div>      
    <script src="/manageTerritorySearch.js"></script>

<%- include("../partials/footer") %>