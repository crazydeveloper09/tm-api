<%- include("../partials/header") %>

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="text-center">
                    Znalezione tereny zboru <%= currentUser.username %> dla daty <%= date %>: <%= territories.length %>
                </h1>
            </div>
        </div>
        <%- include("../partials/territorySearch") %>
        <div id="dateSearch">
            
                <form action="/territories/dateChanges" method="get">
                    <div class="input-group mb-3">
                        <input type="date" class="form-control" name="date" value="<%= date %>" placeholder="Wpisz nr terenu" aria-label="Wpisz nr terenu" aria-describedby="basic-addon2">
                        <button class="btn btn-success" type="submit"><i class="fas fa-search"></i></button>
                    </div>
                </form>
        </div>
        <% if(territories.length===0){ %>
            <div class="row justify-content-center">
                <div class="col-lg-8 col-md-12">
                    <div class="alert alert-info text-center" role="alert">
                        Nie znaleziono teren√≥w w zborze <%= currentUser.username %> dla daty <%= date %>
                    </div>
                </div>
            </div>
        <% } else { %>
            <div class="row">
                <% territories.forEach((territory) => { %>
                    <%- include("../partials/territory", {territory: territory}) %>
                <% }) %>
            </div>
        <% } %>
    </div>      
    <script src="/manageTerritorySearch.js"></script>

<%- include("../partials/footer") %>