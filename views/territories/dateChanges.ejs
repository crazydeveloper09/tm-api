<%- include("../partials/header") %>

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="text-center">
                    Znalezione tereny zboru <%= currentUser.username %> dla daty <%= date %>: <%= territories.length %>
                </h1>
            </div>
        </div>
        <%- include("../partials/territorySearch") %>
        <div class="territory-navigation">
            <a href="/territories/dateChanges?date=<%= dateToISOString(new Date(date).getDate() - 1) %>"><i class="fa-solid fa-backward"></i> <%= dateToISOString(new Date(date).getDate() - 1) %></a>
            <a href="/territories/dateChanges?date=<%= dateToISOString(new Date(date).getDate() + 1) %>"></i> <%= dateToISOString(new Date(date).getDate() + 1) %> <i class="fa-solid fa-forward"></i></a>
            
        </div>
        <% if(territories.length===0){ %>
            <div class="row justify-content-center">
                <div class="col-lg-8 col-md-12">
                    <div class="alert alert-info text-center" role="alert">
                        Nie znaleziono teren√≥w w zborze <%= currentUser.username %> dla daty <%= date %>
                    </div>
                </div>
            </div>
        <% } else { %>
            <div class="row">
                <% territories.forEach((territory) => { %>
                    <%- include("../partials/territory", {territory: territory}) %>
                <% }) %>
            </div>
        <% } %>
    </div>      
    <script src="/manageTerritorySearch.js"></script>

<%- include("../partials/footer") %>